class Solution 
{
    public int[][] flipAndInvertImage(int[][] image) 
    {
        int len = image.length;
        int array[][] = new int[len][len];
        for(int i = 0, n = 0; i < len ; i++, n++)
        {
            for(int j = len -1,m = 0; j >= 0; j--, m++)
            {
                if(image[n][m] == 0)
                    array[i][j] = 1;
                else if(image[n][m] == 1)
                    array[i][j] = 0;
            }
        }
        return array;
    }
}
