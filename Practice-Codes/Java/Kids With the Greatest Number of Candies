class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) 
    {
        List<Boolean> list = new ArrayList<>();
        for(int i = 0; i < candies.length; i++)
        {
            boolean b = true;
            int val = candies[i] + extraCandies;
            for(int j = 0; j < candies.length && b; j++)
            {
                if(i != j)
                {
                    if(val < candies[j])
                        b = false;
                }
            }
            list.add(b);
        }
        return list;
    }
}
