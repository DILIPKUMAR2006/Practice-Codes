class Solution 
{
    public String reversePrefix(String word, char ch) 
    {
        boolean bool = true;
        for(int i = 0; i < word.length() && bool; i++)
        {
            if(word.charAt(i) == ch)
            {
                StringBuilder str = new StringBuilder(word.substring(0,i+1));
                str.reverse();
                str.append(word.substring(i+1));
                word = str.toString();
                bool = false;
            }
        }
        return word;
    }
}
